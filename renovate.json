{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchDepTypes": ["base"],
      "matchPackageNames": ["gcr.io/distroless/base-debian12"],
      "groupName": "Distroless Base Image"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchDepTypes": ["base"],
      "matchPackageNames": ["debian:bookworm-slim"],
      "groupName": "Debian Base Image"
    }
  ]
}

